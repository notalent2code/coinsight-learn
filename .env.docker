# Docker BuildKit configuration for optimal caching
# Add this to your ~/.docker/config.json or set as environment variables

# Enable BuildKit features
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

# BuildKit specific configurations
export BUILDKIT_PROGRESS=plain
export BUILDKIT_COLORS=1

# Memory and parallel build settings
export DOCKER_BUILDKIT_STEP_LOG_MAX_SIZE=50000000
export DOCKER_BUILDKIT_STEP_LOG_MAX_SPEED=100000000

# For development, you can also use:
# export BUILDKIT_HOST=docker-container://buildx_buildkit_mybuilder0
